{
  "mochaOptions": {
    "timeout": 60000
  },
  "plugins": {
    "local": {
      "browsers": [ "chrome" ]
    },
    "sauce": {
      "browsers": [
        {
          "browserName":  "safari",
          "platform":     "OS X 10.13",
          "version":      "11.1"
        },
        {
          "browserName":  "chrome",
          "platform":     "OS X 10.12"
        },
        {
          "browserName":  "firefox",
          "platform":     "OS X 10.12"
        }
      ]
    },
    "istanbub": {
      "dir": "./reports/coverage",
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/*.html",
        "**/*.js"
      ],
      "exclude": [
        "**/*polyfill*",
        "**/bin/*",
        "**/bower_components/**/*",
        "**/demo/*",
        "**/locales/*",
        "**/node_modules/**/*",
        "**/reports/*",
        "**/test/*"
      ],
      "thresholds": {
        "global": {
          "statements": 75,
          "branches": 65,
          "functions": 70,
          "lines": 75
        }
      }
    },
    "size-limit": {
      "path": "fs-dialog-all.html",
      "limitNoPolymer": "25 KB",
      "limitNoExternals": "15 KB"
    }
  }
}
