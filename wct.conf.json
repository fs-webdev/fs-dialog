{
  "plugins": {
    "local": {
      "browsers": [ "chrome" ]
    },
    "sauce": {
      "browsers": [
        {
          "browserName":  "microsoftedge",
          "platform":     "Windows 10",
          "version":      ""
        },
        {
          "browserName":  "safari",
          "platform":     "OS X 10.12",
          "version":      "11"
        },
        {
          "browserName":  "chrome",
          "platform":     "Linux"
        },
        {
          "browserName":  "firefox",
          "platform":     "Linux"
        }
      ]
    },
    "istanbul": {
      "dir": "./reports/coverage",
      "reporters": ["text", "text-summary", "lcov"],
      "include": [
        "**/fs-dialog/*.*"
      ],
      "exclude": [
        "**/bin/*",
        "**/bower_components/**/*",
        "**/demo/*",
        "**/locales/*",
        "**/reports/*",
        "**/test/*"
      ],
      "thresholds": {
        "global": {
          "statements": 0,
          "branches": 0,
          "functions": 0
        }
      }
    },
    "size-limit": {
      "path": "fs-dialog-all.html",
      "limit": "24 KB"
    }
  }
}
