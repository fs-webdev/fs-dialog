{
  "name": "fs-dialog",
  "version": "5.3.5",
  "description": "An accessible standard dialog for FamilySearch.",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs-webdev/fs-dialog.git"
  },
  "author": {
    "name": "FamilySearch",
    "url": "https://familysearch.org/"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": false,
  "bugs": {
    "url": "https://github.com/fs-webdev/fs-dialog/issues"
  },
  "homepage": "https://github.com/fs-webdev/fs-dialog#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "css-slam": "^2.0.2",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-replace": "^0.6.1",
    "gulp-uglify": "^3.0.0",
    "polymer-build": "^2.1.1",
    "fs-common-build-scripts": "github:fs-webdev/fs-common-build-scripts#semver:^2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged",
      "pre-push": "npm run lint && CI=true npm run test"
    }
  },
  "lint-staged": {
    "*.{html,js,json}": [
      "suppress-exit-code npx eslint '**/*.html' '**/*.js' '**/*.json' --fix",
      "suppress-exit-code git add"
    ]
  },
  "scripts": {
    "preinstall": "git config --global url.https://github.com/.insteadOf git://github.com/",
    "postinstall": "bower install",
    "lint": "eslint '**/*.html' '**/*.js' '**/*.json' && stylelint '**/*.html' '**/*.css'",
    "lint:fix": "eslint '**/*.html' '**/*.js' '**/*.json' --fix && stylelint '**/*.html' '**/*.css' --fix",
    "lint:quiet": "eslint '**/*.html' '**/*.js' '**/*.json' --quiet && stylelint '**/*.html' '**/*.css' --quiet",
    "lint:staged": "lint-staged && node node_modules/fs-common-build-scripts/bin/pre_commit_checks.js && echo '\n*** MAKE SURE TO RUN `gulp` BEFORE PUSHING ***\n'",
    "test": "wct --skip-plugin sauce",
    "test:ci": "wct --configFile wct.conf.windows.json --skip-plugin local && wct --configFile wct.conf.json --skip-plugin local",
    "test:persistent": "wct --skip-plugin sauce -p"
  },
  "stylelint": {
    "about": "https://github.com/stylelint/stylelint/blob/master/docs/user-guide/rules.md#possible-errors",
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "**/bower_components/**.*",
      "**/node_modules/**.*",
      "**/reports/**.*",
      "**/test/**.*"
    ],
    "rules": {
      "indentation": 2,
      "media-feature-colon-space-after": null,
      "selector-type-no-unknown": null,
      "unit-whitelist": [
        "%",
        "deg",
        "em",
        "px",
        "rem",
        "s",
        "vh",
        "vw"
      ]
    }
  }
}
